<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= news.title %> - newsAndEventsDetail</title>
    <meta name="description" content="<%= news.description %>" />
    <meta
      name="robots"
      content="max-image-preview:large, max-snippet:-1, max-video-preview:-1 "
    />
    <%- include('partials/preconnect') %>

    <!-- Open Graph meta tags for social sharing -->
    <meta property="og:title" content="" />
    <meta property="og:description" content="" />
    <meta property="og:url" content="https://maxbalk.com/" />
    <link rel="canonical" href="https://maxbalk.com/" />

    <!-- Twitter Card meta tags for Twitter sharing -->
    <meta name="twitter:title" content="" />
    <meta name="twitter:description" content="" />

    <%- include('partials/metas'); -%>
    <link
      rel="preload"
      as="image"
      href="https://maxbalk.com/images/Comprehensive-Services.webp"
    />
  </head>
  <body>
    <%- include('partials/navbar'); -%>

    <!-- ! Banner Section -->
    <section class="news-and-events-detail-banner banner p-t-100">
      <div class="maxbalk-container banner__container">
        <h1 class="h2 fc-w fw-6">Explore MAXBALK's Cutting-Edge Products</h1>
      </div>
      <!-- * Breadcrum -->
      <div class="breadcrum maxbalk-container p-b-50 p-t-75">
        <a href="/">Home</a>
        <a href="/products">Prodcuts</a>
        <span class="breadcrum__active" href="#">Prodcuts Detail</span>
      </div>
      <!-- * Breadcrum -->
    </section>
    <!-- ! Banner Section -->

    <!-- ! News and  Events Section -->
    <section class="maxbalk-container news-event m-t-100 m-b-100">
      <div class="news-event__detail">
        <h1><%= news.title %></h1>
        <p class="p-20 fc-p fw-4 m-b-20">
          <%= news.description %>
        </p>
        <img
          src="<%= news.image %>"
          width="950"
          height="480"
          loading="lazy"
          alt="product-banner"
        />
        <p class="p-20 fc-p fw-4 m-b-20">
          <%- news.content %>
        </p>
       
      </div>

      <div class="news-event__more-container">
        <div class="news-event__more">
          <h2 class="fc-a fw-6 h4">More News & Events</h2>
          <div class="news-event__card">
            <img
              width="280"
              height="200"
              loading="lazy"
              src="<%= news.image %>"
              alt="product-banner"
            />
            <a class="fc-w fw-5 p-18" href="#"
              ><h3>Maxbalk Launches Next-Generation Drone Backpack</h3></a
            >
          </div>
          <% relatedNews.forEach((related) => { %>
            <div class="news-event__card">
                <img src="<%= related.image %>" width="280" height="200" loading="lazy" alt="Related News Image">
                <a class="fc-w fw-5 p-18" href="/news-and-events/<%= related.slug %>"><h3><%= related.title %></h3></a>
            </div>
        <% }) %>
        </div>
      </div>
    </section>
    <!-- ! News and  Events Section -->

    <%- include('partials/call-to-action'); -%> <%- include('partials/footer');
    -%>
  </body>
</html>
